
<div class="bg-template red accent-2"></div>
<main class="center-pane">
    <div class="container">
        <div class="row signin-box">
            <div class="col card s12 white z-depth-1">
                <a href="/signin" class="close-pane-icon"><i class="material-icons">close</i></a>
                <form class="col s12">
                    <div class="card-content">
                        <h5 class="center-align text-darken-2">POJAN</h5>

                        {{#if message}} <div class="error"> {{message}}</div> {{/if}}

                        <div class="row">
                            <div class="col s12 center">
                                <h6 class="center-align">Reset Password</h6>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate" autocomplete="off">
                                <label for="email" class="red-text accent-2">What's your email?</label>
                            </div>
                        </div>

                        <div class="row center">
                            <button class="btn waves-effect waves-light red accent-2" type="submit" name="action">RESET</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

{{> entrance-footer }}