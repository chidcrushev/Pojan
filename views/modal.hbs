  <div class="modal-content">
    <a href="#" class="modal-close  right"><i class="material-icons">close</i></a>
    <h4>{{response.post_title}}</h4>
    <ul class="card-breadcrumb">
      <li><i class="material-icons {{#if (eq response.status 1)}} green-text {{else}} red-text {{/if}} accent-4 ">lens</i><span>{{#if (eq response.status 1)}} Active {{else}} Inactive {{/if}}</span></li>
      <li><span>{{response.assistantship_title:}}</span></li>
      <li><span class="tooltipped" data-position="top" data-tooltip="{{response.requisite_title}}">{{response.requisite_title}}</span></li>
      <li><i class="material-icons">access_time</i><span>{{response.created_at}}</span></li>
    </ul>

    <div class="row">
      <h6>Description</h6>
      <p>
        {{response.description}}
      </p>
    </div>
    
    <div class="row">
      <h6>Requirement</h6>
      <p>{{response.requirement}}</p>
    </div>

    <div class="row">
      <h6>Department Info</h6>
      <div class="row">
        <div class="chip">
          <i class="material-icons">school</i>
          {{response.dept_name}}
        </div>
        <div class="chip">
          <i class="material-icons">person_outline</i>
          {{response.firstname}} {{response.lastname}}
        </div>
      </div>
    </div>
    
    <div class="row">
      <h6>Stats</h6>
      <div class="row">
        <div class="chip">
          <i class="material-icons">group</i>
          {{ response.NOSOFAPPLICANTS }} {{#if (gt response.NOSOFAPPLICANTS 1)}} applicants {{else}} applicant {{/if}}
        </div>
        
        <div class="chip">
          <i class="material-icons">visibility</i>
          {{ response.NOSOFVIEWS }} {{#if (gt response.NOSOFVIEWS 1)}} views {{else}} view {{/if}}
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <!-- <a href="#!" class="modal-close waves-effect waves-red pink darken-3 btn">APPLY</a> -->
    <a href="{{applyUrl}}" class="waves-effect waves-red pink darken-3 btn">APPLY</a>
</div>
