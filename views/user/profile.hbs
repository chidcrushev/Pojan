  <!-- Modal Structure -->
  <div id="profileModalUpdateForm" class="modal modal-fixed-footer">
    <div class="modal-content">
      <h4>Update profile Information</h4>
      <p>You can only update your contact info</p>
        <div class="row">
            <form class="col s12" id="profileForm" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col s12">
                        <div id="formError" class="form-error"></div>
                    </div>
                </div>
      
                <div class="row">
                    <div class="col s12">
                        <div class="input-field col s6">
                            <input id="first_name" type="text" name="firstname" value="{{info.firstname}}" required/>
                            <label for="first_name">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate" name="lastname" value="{{info.lastname}}" required/>
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field col s12">
                            <input disabled value="{{info.email}}" id="disabled" type="email">
                            <label for="disabled">Email</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field col s12">
                            <input type="number" name="phone" value="{{info.phone}}" required/>
                            <label for="phone">Phone</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col s12">
                        <div class="input-field col s12">
                            <input type="text" name="student_id" value="{{info.student_id}}" required/>
                            <label for="student_id">Student Id</label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <div class="input-field col s12">
                            <!-- <i class="material-icons prefix">textsms</i> -->
                            <input value="{{departmentInfo}}" placeholder="Start typing to select department" type="text" id="autocomplete-input" class="autocomplete validate" autocomplete="off" name="department" required>
                            <label for="autocomplete-input">Select Department</label>
                        </div>
                    </div>
                </div>
                {{!-- Loader --}}
                <div class="preloader-wrapper active loader" id="loader">
                    <div class="spinner-layer spinner-red-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div>
                        <div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="waves-effect waves-light pink darken-3 btn-flat white-text" id="btnProfile">UPDATE</button>
    </div>
  </div>

